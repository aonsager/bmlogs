<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Searching for <%= @char_name %></h3>
    </div>
  </div>

  <% if @chars.size == 0 %>
    <p>No characters found. Try again?</p>
    <%= form_tag('/players/search', method: "get") do %>
      <%= label_tag(:report_id, "Character name:") %>
      <%= text_field_tag(:char_name) %>
      <%= submit_tag("Search", class: "btn btn-primary") %>
    <% end %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Character</th>
        <th>Parses</th>
        <th></th>
      </tr>
    </thead>
  <% @chars.each do |player| %>
    <tr>
      <td><%= player.player_name %></td>
      <td><%= @report_counts[player.player_id] %></td>
      <td><%= link_to('View Reports', player_path(player.player_id), class: 'btn btn-default') %></td>
    </tr>
  <% end %>
  </table>
</div>