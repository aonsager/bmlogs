<% breadcrumb :player, @player_id, @player_name, @user_id %>
<div class="container">
  <div class="row">
    <h3>Logs for <%= @player_name %></h3>
  </div>
  <br /><br />

  <% @zones.each do |zone| %>
    <h4><%= zone.name %></h4>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Parses</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% zone.bosses.each do |boss| %>
          <tr>
            <td><%= boss.name %></td>
            <td><%= @player_bosses[boss.id] ||= 0 %></td>
            <td><%= link_to('Compare', player_boss_path(@player_id, boss.id), class: 'btn btn-default') if @player_bosses[boss.id] > 0 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>